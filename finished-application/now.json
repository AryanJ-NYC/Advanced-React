{
  "version": 2,
  "name": "sick-fits",
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@now/node-server"
    },
    {
      "src": "backend/src/**/*.graphql",
      "use": "@now/static"
    },
    {
      "src": "frontend/static/*.*",
      "use": "@now/static"
    },
    {
      "src": "frontend/next.config.js",
      "use": "@now/next"
    }
  ],
  "env": {
    "APP_SECRET": "app-secret",
    "PRISMA_ENDPOINT": "https://us1.prisma.sh/aryan-j-e0febe/sick-fits/dev",
    "PRISMA_SECRET": "my-secret"
  },
  "routes": [
    {
      "src": "/graphql",
      "dest": "/backend/src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
